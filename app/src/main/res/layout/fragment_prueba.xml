<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.fragment.PruebaFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Que vas a celebrar?"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/black">
    </TextView>


    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="190dp"

        android:id="@+id/imagenview1"
        android:layout_marginTop="200dp"
        app:cardCornerRadius="200dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/almuerzo"
            android:scaleType="centerCrop">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cumpleaños"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop="60dp"
            android:textColor="@color/black">
        </TextView>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="190dp"


        android:id="@+id/imagenview2"
        android:layout_marginTop="200dp"
        app:cardCornerRadius="200dp"
        android:layout_marginLeft="210dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="210dp"
            android:src="@drawable/cena"
            android:scaleType="centerCrop">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cena Romantica"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop="40dp"
            android:textColor="@color/black">
        </TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="190dp"

        android:id="@+id/imagenview3"
        android:layout_marginTop="450dp"
        app:cardCornerRadius="200dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/graduacion"
            android:scaleType="centerCrop">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Graducacion"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop="60dp"
            android:textColor="@color/black">
        </TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="190dp"

        android:id="@+id/imagenview4"
        android:layout_marginTop="450dp"
        app:cardCornerRadius="200dp"
        android:layout_marginLeft="210dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="otros"
            android:scaleType="centerCrop">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Otros"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop="60dp"
            android:textColor="@color/black">
        </TextView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>